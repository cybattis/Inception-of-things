Vagrant.configure("2") do |config|
	config.vm.box = "debian/bookworm64"
	config.vm.provider "virtualbox" do |vb|
		vb.memory = "1024"
		vb.cpus = 1
		vb.gui = false
	end

	# Define master node
	config.vm.define "cybattis" do |master|
		master.vm.hostname = "cybattisS"
		master.vm.network "private_network", ip: "192.168.56.110"
		master.vm.provider "virtualbox" do |vb|
			vb.customize ["modifyvm", :id, "--name", "cybattisS"]
		end
		master.vm.provision "shell", path: "./scripts/k3s-master.sh"
	end

	# Define worker node
	config.vm.define "njennes" do |worker|
		worker.vm.hostname = "njennesSW"
		worker.vm.network "private_network", ip: "192.168.56.111"
		worker.vm.provider "virtualbox" do |vb|
			vb.customize ["modifyvm", :id, "--name", "njennesSW"]
		end
		worker.vm.provision "shell", path: "./scripts/k3s-worker.sh", args: ["192.168.56.110", "192.168.56.111"]
	end
end
